<h4>New Order</h4>
<%= form_for @order do |f| %>
<%= f.label :name %>
<%= f.collection_select :item_id, Item.all, :id, :name, class: "u-full-width"%>
<%= f.label :party_id %>
<%= f.collection_select :party_id, Party.all, :id, :id, class: "u-full-width"%>
<br>
<%= f.submit :class => "waves-effect waves-light btn" %>
<% end %>

<table>
  <thead>
    <tr>
        <th>Order</th>
        <th>Price</th>
        <th>Party</th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
<% @orders.each do |order| %>
    <tr>
      <td><%= order.item.name %></td>
      <td><%= order.item.price %></td>
      <td><%= order.party_id %></td>
      <td><%= button_to "Edit", ('items#update'), method: :update, class: "waves-effect waves-light btn" %></td>
      <td><%= button_to "Remove", order_path(order), method: :delete, class: "waves-effect waves-light btn" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

