        <th>Order</th>
        <th>Price</th>
        <th>Party</th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
<% @orders.each do |order| %>
    <tr>
      <td><%= order.item.name %></td>
      <td><%= order.item.price %></td>
      <td><%= order.party_id %></td>
      <td><%= button_to "Edit", ('orders#update'), method: :update, class: "waves-effect waves-light btn" %></td>
      <td><%= button_to "Remove", order_path(order), method: :delete, class: "waves-effect waves-light btn" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
